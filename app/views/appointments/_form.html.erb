<%= simple_form_for(@appointment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :client, label_method: lambda { |c| "#{c.first_name} #{c.last_name}" } %>
    <%= f.input :occured_on %>
    <%= f.input :start %>
    <%= f.input :end %>
    <%= f.input :copay_received %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
